<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="timetable_category"
        app:title="Timetable">
        <SwitchPreferenceCompat
            app:key="weekend"
            app:title="Include weekends" />
    </PreferenceCategory>
    <PreferenceCategory
        app:key="alarm_category"
        app:title="Alarm">
        <ListPreference
            app:defaultValue="0"
            app:entries="@array/alert_entries"
            app:entryValues="@array/alert_values"
            app:key="prior_alarm"
            app:title="Alert how many minutes before?"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <PreferenceCategory
        app:key="feedback_category"
        app:title="Feedback">
        <Preference
            app:key="feedback"
            app:summary="Report technical issues or suggest new features"
            app:title="Send Feedback" />
    </PreferenceCategory>
</PreferenceScreen>