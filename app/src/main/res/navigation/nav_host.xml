<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_host"
    app:startDestination="@id/timetableFragment">

    <fragment
        android:id="@+id/timetableFragment"
        android:name="com.example.android.mycampusapp.timetable.display.TimetableFragment"
        android:label="Timetable">
        <action
            android:id="@+id/action_timetableFragment_to_mondayInputFragment"
            app:destination="@id/mondayInputFragment" />
        <action
            android:id="@+id/action_timetableFragment_to_tuesdayInputFragment"
            app:destination="@id/tuesdayInputFragment" />
        <action
            android:id="@+id/action_timetableFragment_to_sundayInputFragment"
            app:destination="@id/sundayInputFragment" />
        <action
            android:id="@+id/action_timetableFragment_to_wednesdayInputFragment"
            app:destination="@id/wednesdayInputFragment" />
        <action
            android:id="@+id/action_timetableFragment_to_thursdayInputFragment"
            app:destination="@id/thursdayInputFragment" />
        <action
            android:id="@+id/action_timetableFragment_to_fridayInputFragment"
            app:destination="@id/fridayInputFragment" />
        <action
            android:id="@+id/action_timetableFragment_to_saturdayInputFragment"
            app:destination="@id/saturdayInputFragment" />
        <action
            android:id="@+id/action_timetableFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/timetableFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mondayInputFragment"
        android:name="com.example.android.mycampusapp.timetable.input.monday.MondayInputFragment"
        android:label="Set Monday Class">
        <action
            android:id="@+id/action_mondayInputFragment_to_timetableFragment"
            app:destination="@id/timetableFragment"
            app:popUpTo="@id/timetableFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="mondayClass"
            android:defaultValue="@null"
            app:argType="com.example.android.mycampusapp.timetable.data.MondayClass"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/tuesdayInputFragment"
        android:name="com.example.android.mycampusapp.timetable.input.tuesday.TuesdayInputFragment"
        android:label="Set Tuesday Class">
        <action
            android:id="@+id/action_tuesdayInputFragment_to_timetableFragment"
            app:destination="@id/timetableFragment"
            app:popUpTo="@id/timetableFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="tuesdayClass"
            android:defaultValue="@null"
            app:argType="com.example.android.mycampusapp.timetable.data.TuesdayClass"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/sundayInputFragment"
        android:name="com.example.android.mycampusapp.timetable.input.sunday.SundayInputFragment"
        android:label="Set Sunday Class">
        <action
            android:id="@+id/action_sundayInputFragment_to_timetableFragment"
            app:destination="@id/timetableFragment"
            app:popUpTo="@id/timetableFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="sundayClass"
            android:defaultValue="@null"
            app:argType="com.example.android.mycampusapp.timetable.data.SundayClass"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/wednesdayInputFragment"
        android:name="com.example.android.mycampusapp.timetable.input.wednesday.WednesdayInputFragment"
        android:label="set wednesday class">
        <action
            android:id="@+id/action_wednesdayInputFragment_to_timetableFragment"
            app:destination="@id/timetableFragment"
            app:popUpTo="@id/timetableFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="wednesdayClass"
            android:defaultValue="@null"
            app:argType="com.example.android.mycampusapp.timetable.data.WednesdayClass"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/thursdayInputFragment"
        android:name="com.example.android.mycampusapp.timetable.input.thursday.ThursdayInputFragment"
        android:label="set thursday class">
        <action
            android:id="@+id/action_thursdayInputFragment_to_timetableFragment"
            app:destination="@id/timetableFragment"
            app:popUpTo="@id/timetableFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="thursdayClass"
            android:defaultValue="@null"
            app:argType="com.example.android.mycampusapp.timetable.data.ThursdayClass"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/fridayInputFragment"
        android:name="com.example.android.mycampusapp.timetable.input.friday.FridayInputFragment"
        android:label="set friday class">
        <action
            android:id="@+id/action_fridayInputFragment_to_timetableFragment"
            app:destination="@id/timetableFragment"
            app:popUpTo="@id/timetableFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="fridayClass"
            android:defaultValue="@null"
            app:argType="com.example.android.mycampusapp.timetable.data.FridayClass"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/saturdayInputFragment"
        android:name="com.example.android.mycampusapp.timetable.input.saturday.SaturdayInputFragment"
        android:label="set saturday class">
        <action
            android:id="@+id/action_saturdayInputFragment_to_timetableFragment"
            app:destination="@id/timetableFragment"
            app:popUpTo="@id/timetableFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="saturdayClass"
            android:defaultValue="@null"
            app:argType="com.example.android.mycampusapp.timetable.data.SaturdayClass"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/assignmentsFragment"
        android:name="com.example.android.mycampusapp.assignments.AssignmentsFragment"
        android:label="@string/assignments_menu" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.android.mycampusapp.settings.SettingsFragment"
        android:label="Settings">
        <action
            android:id="@+id/action_settingsFragment_to_timetableFragment"
            app:destination="@id/timetableFragment"
            app:popUpTo="@id/timetableFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.android.mycampusapp.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@android:anim/fade_in"
            app:popEnterAnim="@android:anim/fade_in" />
        <action
            android:id="@+id/action_loginFragment_to_timetableFragment"
            app:destination="@id/timetableFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.android.mycampusapp.login.SignUpFragment"
        android:label="Sign Up" >
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@android:anim/fade_in"
            app:popEnterAnim="@android:anim/fade_in" />
        <argument
            android:name="studentStatus"
            android:defaultValue="UNDEFINED"
            app:argType="com.example.android.mycampusapp.login.StudentStatus" />
    </fragment>
</navigation>