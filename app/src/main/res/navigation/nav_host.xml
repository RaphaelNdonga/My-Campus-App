<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host"
    app:startDestination="@id/timetableFragment"
    >

    <fragment
        android:id="@+id/timetableFragment"
        android:name="com.example.android.mycampusapp.display.TimetableFragment"
        android:label="Timetable" >
        <action
            android:id="@+id/action_timetableFragment_to_mondayInputFragment"
            app:destination="@id/mondayInputFragment" />
        <action
            android:id="@+id/action_timetableFragment_to_tuesdayInputFragment"
            app:destination="@id/tuesdayInputFragment" />
        <action
            android:id="@+id/action_timetableFragment_to_sundayInputFragment"
            app:destination="@id/sundayInputFragment" />
    </fragment>
    <fragment
        android:id="@+id/mondayFragment"
        android:name="com.example.android.mycampusapp.display.days.monday.MondayFragment"
        android:label="MondayFragment" />
    <fragment
        android:id="@+id/tuesdayFragment"
        android:name="com.example.android.mycampusapp.display.days.tuesday.TuesdayFragment"
        android:label="TuesdayFragment" />
    <fragment
        android:id="@+id/wednesdayFragment"
        android:name="com.example.android.mycampusapp.display.days.WednesdayFragment"
        android:label="WednesdayFragment" />
    <fragment
        android:id="@+id/thursdayFragment"
        android:name="com.example.android.mycampusapp.display.days.ThursdayFragment"
        android:label="ThursdayFragment" />
    <fragment
        android:id="@+id/fridayFragment"
        android:name="com.example.android.mycampusapp.display.days.FridayFragment"
        android:label="FridayFragment" />
    <fragment
        android:id="@+id/saturdayFragment"
        android:name="com.example.android.mycampusapp.display.days.SaturdayFragment"
        android:label="SaturdayFragment" />
    <fragment
        android:id="@+id/sundayFragment"
        android:name="com.example.android.mycampusapp.display.days.SundayFragment"
        android:label="SundayFragment" />
    <fragment
        android:id="@+id/mondayInputFragment"
        android:name="com.example.android.mycampusapp.input.monday.MondayInputFragment"
        android:label="Set Monday Class">
        <action
            android:id="@+id/action_mondayInputFragment_to_timetableFragment"
            app:destination="@id/timetableFragment"
            app:popUpTo="@id/timetableFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="mondayClass"
            android:defaultValue="@null"
            app:argType="com.example.android.mycampusapp.data.MondayClass"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/tuesdayInputFragment"
        android:name="com.example.android.mycampusapp.input.tuesday.TuesdayInputFragment"
        android:label="Set Tuesday Class">
        <action
            android:id="@+id/action_tuesdayInputFragment_to_timetableFragment"
            app:destination="@id/timetableFragment"
            app:popUpTo="@id/timetableFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="tuesdayClass"
            android:defaultValue="@null"
            app:argType="com.example.android.mycampusapp.data.TuesdayClass"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/sundayInputFragment"
        android:name="com.example.android.mycampusapp.input.sunday.SundayInputFragment"
        android:label="Set Sunday Class">
        <action
            android:id="@+id/action_sundayInputFragment_to_timetableFragment"
            app:destination="@id/timetableFragment"
            app:popUpTo="@id/timetableFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="sundayClass"
            android:defaultValue="@null"
            app:argType="com.example.android.mycampusapp.data.SundayClass"
            app:nullable="true" />
    </fragment>
</navigation>