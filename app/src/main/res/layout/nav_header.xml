<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_dimen"
    android:orientation="vertical"
    android:background="@color/colorSecondaryDark"
    android:padding="@dimen/nav_header_padding"
    android:gravity="bottom"
    android:theme="@style/ThemeOverlay.MaterialComponents.Dark">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_open_book"
        android:contentDescription="@string/my_campus_app_logo"
        android:padding="@dimen/toolbar_padding" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/toolbar_padding"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.MyCampusApp.Toolbar"/>

</LinearLayout>