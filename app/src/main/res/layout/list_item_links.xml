<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_background"
        android:padding="@dimen/card_constraint_layout_padding"
        android:orientation="vertical">
        <TextView
            android:id="@+id/subject"
            android:text="@string/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MyCampusApp.RecyclerViewItemTitle"/>
        <TextView
            android:id="@+id/link"
            android:text="@string/link"
            android:textColor="@color/location"
            android:textAppearance="@style/TextAppearance.MyCampusApp.RecyclerViewItemDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>